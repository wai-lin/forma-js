{
  "name": "forma-js",
  "version": "1.0.1-0",
  "description": "",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx,.jsx packages/ examples/",
    "test": "jest --passWithNoTests",
    "test:dev": "jest --passWithNoTests --watch",
    "prebuild": "npm run lint && npm run test",
    "build": "npm run build -w @forma-js/react",
    "example:start": "npm run dev -w @examples/sample",
    "example:serve": "npm run start -w @examples/server",
    "commit": "git add -A && cz"
  },
  "author": "wai-lin",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-testing-library": "^5.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "prop-types": "^15.8.1"
  }
}
